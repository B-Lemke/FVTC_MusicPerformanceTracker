@model IEnumerable<BAH.MusicPerformanceTracker.BL.Piece>

@{
    ViewBag.Title = "Pieces";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pieces</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GradeLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearWritten)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GradeLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearWritten)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
