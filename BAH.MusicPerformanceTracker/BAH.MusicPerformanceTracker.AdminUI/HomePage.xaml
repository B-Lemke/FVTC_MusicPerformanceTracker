        <Button x:Name="btnReporting" Content="Reporting" HorizontalAlignment="Left" Height="61" Margin="414,348,0,0" VerticalAlignment="Top" Width="356" Click="BtnReporting_Click" FontSize="20"/>
        <Label Content="Shapiro &#xD;&#xA;" HorizontalContentAlignment="Center" Height="81" Margin="414,10,22,0" VerticalAlignment="Top" Width="356" FontSize="48" HorizontalAlignment="Center"/>
        <Label Content="Music Performance Tracker" HorizontalAlignment="Left" Margin="395,78,0,0" VerticalAlignment="Top" FontSize="32"/>
    </Grid>
</Window>
